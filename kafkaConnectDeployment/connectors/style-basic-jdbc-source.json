{
  "name": "style-basic-jdbc-source",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSourceConnector",
    "tasks.max": 1,
    "connection.url": "jdbc:oracle:thin:<DB_USERNAME>/<DB_PASSWORD>@//<DB_HOST_IP>:1521/<DB_SERVICE_NAME>",
    "db.timezone":"America/New_York",
    "schema.pattern": "MERCH",
    "table.poll.interval.ms": 3600000,
    "mode": "timestamp",
    "timestamp.column.name": "LAST_MODIFIED_DATE",
    "query": "SELECT sc.IMAGE_STYLEID AS STYLE_ID, BRAND_ID, LAST_MODIFIED_DATE FROM MERCH.STYLES INNER JOIN ELCAT.STYLE_COLOURS sc ON SUBSTR(sc.STYLEID,1,8) = STYLE_ID",
    "topic.prefix": "styles-basic-connect-jdbc",
    "validate.non.null": "false",
    "numeric.mapping": "best_fit",
    "poll.interval.ms": 60000,
    "offset.flush.timeout.ms": 60000
  }
}
